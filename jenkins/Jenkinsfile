pipeline {
    agent any
    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-credentials')
        DOCKERHUB_USERNAME = 'samagyasapkota'
        IMAGE_NAME = 'spring-petclinic'
        IMAGE_TAG = "${BUILD_NUMBER}"
        GIT_REPO = 'https://github.com/samagyasapkota/spring-devops-cicd-project.git'
        KUBE_NAMESPACE = 'petclinic'
        NODE_IP = '192.168.56.20'
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'staging', url: "${GIT_REPO}"
            }
        }
        stage('Build with Maven') {
            steps {
                dir('JavaApp-CICD') {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }
        stage('Run Tests') {
            steps {
                dir('JavaApp-CICD') {
                    sh 'mvn test'
                }
            }
            post {
                always {
                    junit '**/target/surefire-reports/*.xml'
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    sh """
                        docker build -t ${DOCKERHUB_USERNAME}/${IMAGE_NAME}:${IMAGE_TAG} \
                                     -t ${DOCKERHUB_USERNAME}/${IMAGE_NAME}:latest \
                                     -f docker/Dockerfile .
                    """
                }
            }
        }
        stage('Push to DockerHub') {
            steps {
                script {
                    sh """
                        echo \$DOCKERHUB_CREDENTIALS_PSW | docker login -u \$DOCKERHUB_CREDENTIALS_USR --password-stdin
                        docker push ${DOCKERHUB_USERNAME}/${IMAGE_NAME}:${IMAGE_TAG}
                        docker push ${DOCKERHUB_USERNAME}/${IMAGE_NAME}:latest
                        docker logout
                    """
                }
            }
        }
        stage('Deploy to Staging') {
            steps {
                script {
                    sh """
                        # Deploy to Kubernetes instead of docker-compose
                        kubectl set image deployment/petclinic-app \
                            petclinic=${DOCKERHUB_USERNAME}/${IMAGE_NAME}:${IMAGE_TAG} \
                            -n ${KUBE_NAMESPACE} || true
                        
                        # Wait for rollout
                        kubectl rollout status deployment/petclinic-app -n ${KUBE_NAMESPACE} --timeout=5m || true
                        
                        # Show current status
                        kubectl get pods -n ${KUBE_NAMESPACE}
                    """
                }
            }
        }
        stage('Health Check') {

    steps {
        script {
            sh """
                sleep 30
                # Change to your Kubernetes NodePort
                curl -f http://192.168.56.20:30080/ || exit 1
            """
        }
    }
}
    }
    
           steps {
                script {
                    sh """
                        echo "Waiting for application to be ready..."
                        sleep 30
                        
                        # Health check on Kubernetes NodePort
                        curl -f http://${NODE_IP}:30080/ || exit 1
                        echo "Health check PASSED!"
                    """
                }
            }
        }
    }
 (Update Jenkinsfile for Kubernetes deployment)
    post {
        always {
            cleanWs()
        }
        success {
            echo 'Pipeline succeeded!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
